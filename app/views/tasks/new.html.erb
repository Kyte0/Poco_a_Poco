


<div class="row sign-up-container d-flex flex-row">
  <div class="col-12 col-lg-5 custom-container">
    <div class="card card-new-lesson">
    <%= cl_image_tag @booking.user.photos.first.key, class: 'avatar-bordered-lg', style: "margin: 0 auto;" %>
    <h3 class="py-3" style="margin: 0 auto;"> Add a task for <%= @booking.user.first_name %> :</h3>
    <%= simple_form_for [@booking, @task] do |f| %>
        <%= f.input :name %>
        <%= f.input :content %>
        <%= f.input :category %>
        <%= f.submit class: 'btn-nice' %>
    <% end %>
  </div>
  <div class="col-12 col-lg-7 p-0">
    <%= image_tag 'https://images.unsplash.com/photo-1453906971074-ce568cccbc63?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80', style: "height: 100vh; width: 100%; object-fit: cover;" %>
  </div>
  </div>
</div>
