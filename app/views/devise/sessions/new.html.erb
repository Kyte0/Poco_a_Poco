<div class="row">
  <div class="col-7 p-0">
    <%= image_tag 'https://images.unsplash.com/photo-1560184281-dc928c189fb0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80', style: "height: 100vh; width: 100%; object-fit: cover;" %>
  </div>
  <div class="col-5 container">
    <div class="card card-new-lesson">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>


        <div class="form-actions pb-3">
          <%= f.button :submit, "Log in", class: "btn-nice" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
