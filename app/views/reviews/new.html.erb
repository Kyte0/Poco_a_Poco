<div class="row">
  <div class="col-7 p-0">
    <%= image_tag 'https://images.unsplash.com/photo-1511443615772-da90b5f972d4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=826&q=80', style: "height: 100vh; width: 100%; object-fit: cover;" %>
  </div>
  <div class="col-5 custom-container">
    <div class="card card-new-lesson">
      <h3> Review your booking: </h3>
      <%= simple_form_for [@booking, @review] do |f| %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.input :comment %>
          <%= f.submit class: 'btn-nice' %>
      <% end %>
    </div>
  </div>
</div>
