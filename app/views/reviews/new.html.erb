<div class="row">
  <div class="col-7 p-0">
    <%= image_tag 'https://images.unsplash.com/photo-1514320291840-2e0a9bf2a9ae?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1500&q=80', style: "height: 100vh; width: 100%; object-fit: cover;" %>
  </div>
  <div class="col-5 custom-container">
    <div class="card card-new-lesson">
      <%= cl_image_tag @booking.lesson.user.photos.first.key, class: 'avatar-bordered-lg', style: "margin: 0 auto;" %>
      <h3 class="py-3" style="margin: 0 auto;"> Review <%= @booking.lesson.user.first_name %> </h3>
      <%= simple_form_for [@booking, @review] do |f| %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.input :comment %>
          <%= f.submit class: 'btn-nice' %>
      <% end %>
    </div>
  </div>
</div>
