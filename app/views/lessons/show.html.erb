    <% @reviews.each do |review| %>
    <div  container>
      <div class="review-stars">
      <p> <% review.rating.to_i.times do %> </p>
      <i class="far fa-star"></i>
      <% end %>
    </div>
      <p> <%= review.comment %></p>
      <% end %>
    </div>
    <% else %>
