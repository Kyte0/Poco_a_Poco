<div class="row">
  <div class="col-5 custom-container">
    <div class="card card-new-lesson">
      <h3> Add a lesson:</h3>
      <%= simple_form_for (@lesson) do |f| %>
          <%= f.input :instrument, placeholder: 'violin' %>
          <%= f.input :price, placeholder: '20' %>
          <%= f.input :level, placeholder: 'beginner' %>
          <%= f.input :location, label: 'Postcode', placeholder: 'E11 4RB' %>
          <%= f.submit class: 'btn btn-nice' %>
      <% end %>
    </div>
  </div>
  <div class="col-7 p-0">
    <%= image_tag 'https://images.unsplash.com/photo-1526142684086-7ebd69df27a5?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80', style: "height: 100vh; width: 100%; object-fit: cover;" %>
  </div>
</div>
