  <div class="info-and-cards">
    <div class="search-info">
      <h1>Lessons in "Location"</h1>
    </div>
    <div class="cards">
      <%= @lessons.each do |lesson| %>
      <%= link_to lesson_path(lesson) do %>
        <div class="index-card"></div>
          <%#= if lesson.photos.attached? %>
          <%#= cl_image_tag(lesson.photos.first.key) %>
        <%# else %>
          <%#= cl_image_tag("https://res.cloudinary.com/dbe4hul9k/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1622714025/lessonbusters-logo_cqzclk.jpg") %>
        <%# end %>
          <%= image_tag("logo.jpeg") %>
        <div class="card-trip-infos">
            <div>
              <h2><%= lesson.user.first_name %></h2>
              <h2><%= lesson.user.last_name %></h2>
              <!-- <p> <%#= lesson.description  %> </p> -->
            </div>
          <h2 class="card-trip-pricing">â‚¬<%= lesson.price%></h2>
        </div>
     <% end %>
    <% end %>
    </div>
  </div>
  <div id="map"
    style= "height: 100vh; width: 700px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
