<div class="container">
  <% if current_user == @booking.user %>
    <h1> You booked a lesson with <%= @booking.lesson.user.first_name %> to learn <%= @booking.lesson.instrument %>  </h1>
    <div class="mt-3"><%=cl_image_tag @booking.lesson.user.photos.first.key, crop: :fill, width: 500, style: "border-radius: 1px"%></div>
  <% else %>
    <h1> <%= @booking.user.first_name %> booked a lesson with you to learn <%= @booking.lesson.instrument %>  </h1>
    <div class="mt-3"><%=cl_image_tag @booking.user.photos.first.key, crop: :fill, width: 500, style: "border-radius: 1px"%></div>
  <% end %>
    <div class="mt-3 mb-3"><h6> Start date: <%= @booking.start_date.strftime("%d %B %Y") %> </h6>
    <h6> End date: <%= @booking.end_date.strftime("%d %B %Y") %> </h6></div>
<div>
    <% if  %>
      <% @booking.end_date <= DateTime.now %>
      <%= link_to_if @booking.review.blank? , 'Add a review', new_booking_review_path(@booking), class: 'btn btn-outline-success text-decoration-none' do %>
      <% end %>
    <% end %>
  <%= link_to 'Your home page', user_path(current_user), class: 'btn btn-outline-success text-decoration-none' %>
</div>
<div>
  <% if current_user == @booking.lesson.user && @booking.end_date <= DateTime.now %>
    <%= link_to 'Add a task', new_booking_task_path(@booking), class: 'btn btn-outline-success text-decoration-none' %>
  <% end %>
</div>
</div>
  <div class="review-show">
    <% if @tasks.any? %>
      <h1>Tasks</h1>
      <% @tasks.each do |task| %>
        <div class="d-flex" container>
          <p> <%= task.name %> </p>
          <p> <%= task.content %></p>
          <p> <%= task.category %></p>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
